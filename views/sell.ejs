<%- include('partials/header') %>
<div class="container mt-5">
  <h1>Enter Details</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/sell" method="POST">
            <div class="form-group">
              <input type="email" class="form-control" name="email" placeholder="Your Email">
            </div>
            <div class="form-group">
              <input type="text" class="form-control" name="aname" placeholder="Asset Name">
            </div>
            <div class="form-group">
              <input type="text" class="form-control" name="atype" placeholder="Asset Type">
            </div>
            <div class="form-group">
              <input type="text" class="form-control" name="amount" placeholder="Amount">
            </div>
            <button type="submit" class="btn btn-dark">Submit</button>
            <a class="btn btn-light btn" href="/secrets" role="button">Return Home</a>
            <a class="btn btn-dark btn" href="/logout" role="button">Log Out</a>
          </form>

        </div>
      </div>
    </div>


  </div>
</div>

<%- include('partials/header') %>
